@model MoviesStore.Models.Customer
@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Membership Type: @Model.MembershipType.Name</li>
    @if (Model.Birthdate != null)
    {
        <li>Birth Date: @Model.Birthdate.Value.ToString("dd-MMM-yyyy")</li>
    }
</ul>


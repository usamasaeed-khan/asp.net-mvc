<!-- Specify model for the view -->
@model List<MoviesStore.Models.Movie>

@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Code block for c# code (vars etc)-->
@{
    var className = Model.Count > 0 ? "popular" : null;
}

<!-- Model is used to access model data which is specified on top of the file i.e Movie -->
<h2 class="@className">Movies</h2>

@if (Model.Count == 0)
{
    <text>No one has rented this movie before.</text>
}
else
{
    <table class="table table-bordered table-hover jumbotron">
        <thead>
            <tr>
                <th>
                    Movies
                </th>
                <th>
                    Genre
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(movie.Name, "Info", "Movies", new { id = movie.Id }, null)
                    </td>
                    <td>
                        @movie.Genre.Name
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@model MoviesStore.Models.Movie
@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToString("dd-MM-yyyy")</li>
    <li>Date Added: @Model.DateAdded.ToString("dd-MM-yyyy") </li>
    <li>In Stock: @Model.NumberInStock</li>
</ul>

